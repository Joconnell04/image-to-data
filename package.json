{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "image-to-data",
  "title": "Image to Data",
  "description": "Extract structured text from screenshots using OpenAI vision models",
  "icon": "extension-icon.png",
  "author": "jackson_o_connell",
  "categories": ["Productivity", "Developer Tools"],
  "platforms": [
    "macOS"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "extract-info",
      "title": "Extract Info",
      "description": "Extract structured text from clipboard image via OpenAI vision",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "openaiApiKey",
      "type": "password",
      "title": "OpenAI API Key",
      "description": "Used for vision extraction",
      "required": true,
      "placeholder": "sk-..."
    },
    {
      "name": "routerModel",
      "type": "dropdown",
      "title": "Router Model",
      "description": "OpenAI model used for routing",
      "required": true,
      "default": "gpt-5-mini",
      "data": [
        { "title": "gpt-5-mini", "value": "gpt-5-mini" },
        { "title": "gpt-5.2", "value": "gpt-5.2" },
        { "title": "gpt-5", "value": "gpt-5" },
        { "title": "gpt-4.1", "value": "gpt-4.1" }
      ]
    },
    {
      "name": "extractModel",
      "type": "dropdown",
      "title": "Extractor Model",
      "description": "OpenAI model used for extraction",
      "required": true,
      "default": "gpt-5.2",
      "data": [
        { "title": "gpt-5-mini", "value": "gpt-5-mini" },
        { "title": "gpt-5.2", "value": "gpt-5.2" },
        { "title": "gpt-5", "value": "gpt-5" },
        { "title": "gpt-4.1", "value": "gpt-4.1" }
      ]
    },
    {
      "name": "maxOutputChars",
      "type": "textfield",
      "title": "Max output length (chars)",
      "description": "Maximum number of characters in the output",
      "required": true,
      "default": "12000"
    },
    {
      "name": "includeConfidence",
      "type": "checkbox",
      "title": "Include confidence line",
      "description": "Include a confidence score in the output",
      "label": "Include confidence line in output",
      "default": false,
      "required": false
    },
    {
      "name": "forceMode",
      "type": "dropdown",
      "title": "Force mode",
      "description": "Force a specific extraction mode",
      "required": true,
      "default": "auto",
      "data": [
        { "title": "Auto", "value": "auto" },
        { "title": "Text (screenshots/UI)", "value": "text" },
        { "title": "Table", "value": "table" },
        { "title": "Chart (with trends)", "value": "chart" },
        { "title": "Diagram", "value": "diagram" },
        { "title": "General", "value": "general" }
      ]
    },
    {
      "name": "debugLogging",
      "type": "checkbox",
      "title": "Debug logging",
      "description": "Enable verbose debug logging",
      "label": "Enable debug logging",
      "default": false,
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.3",
    "@raycast/utils": "^1.17.0",
    "openai": "^4.77.4"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
